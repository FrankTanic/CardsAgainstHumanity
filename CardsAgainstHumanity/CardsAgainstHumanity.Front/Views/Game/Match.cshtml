
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="black-card-view">
    <div>
        <p id="black-card">@ViewBag.BlackCard</p>
    </div>
</div>

<div class="played-card-view">
    @if (ViewBag.Stash != null)
    {
        foreach (var stash in ViewBag.Stash)
        {
            <div id="@stash.Card.ID" class="white-card-played"></div>
        }
    }
    <button id="nextRound" value="@ViewBag.BlackCardID">Next Round</button>
</div>

<div class="cards-view">
    @foreach (var card in ViewBag.WhiteCards)
    {
        <div class="white-card card-@card.Card.ID">
            @card.Card.Description
            <button class="playCard" value="@card.Card.ID">Play Card</button>
        </div>
    }
</div>

<div class="sidebar-gameinfo">
    <ul>
        <li>Game ID: @Model.ID</li>
        <li>Created: @Model.Created</li>
    </ul>

    <ul id="connected"></ul>

    <h2>Match</h2>

    <ul id="players">
        @foreach (var player in Model.Players)
        {
            <li id="@player.ID">@player.UserName @if (player.Czar == 1) { <text><span class="czar">(Czar)</span></text> }</li>
        }
    </ul>
</div>
